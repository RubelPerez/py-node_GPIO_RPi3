<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

</head>


<body>
    <% if (variable) { %>
        <img width="250px" height="250px" src="on.png">
        <button onclick="SwitchLED( <%-variable %>)" class="btn btn-outline-primary">Apagar</button>
        <% }else{ %>
            <img width="250px" height="250px" src="off.png">
            <button onclick="SwitchLED(<%-variable %>)" class="btn btn-outline-primary"> Prender</button>
            <% } %>
</body>
<script>
    function SwitchLED(variable) {
        axios.post('/change', { variable }).then(function (response) {
            location.reload();

        }).catch((err) => { alert(err) })
    }
</script>

</html>